{
  "name": "stats.eridian.xyz",
  "version": "0.0.2",
  "description": "Eridian Stats App",
  "author": {
    "name": "Eridian",
    "url": "https://eridian.xyz"
  },
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "start": "next build && next start",
    "lint": "next lint",
    "electron-dev": "NODE_ENV=development electron .",
    "electron": "electron .",
    "electron-build": "electron-builder"
  },
  "build": {
    "appId": "xyz.eridian.stats",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/static/icon.icns",
      "identity": null
    },
    "win": {
      "icon": "public/static/icon.ico"
    },
    "linux": {
      "icon": "public/static/icon.png"
    },
    "npmRebuild": false,
    "asar": true,
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    }
  },
  "dependencies": {
    "@chakra-ui/react": "^3.8.1",
    "@emotion/react": "^11.14.0",
    "@fortawesome/fontawesome-svg-core": "^6.4.1",
    "@fortawesome/free-brands-svg-icons": "^6.4.1",
    "@fortawesome/free-regular-svg-icons": "^6.4.1",
    "@fortawesome/free-solid-svg-icons": "^6.4.1",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@octokit/rest": "^21.1.1",
    "dotenv": "^16.4.7",
    "googleapis": "^146.0.0",
    "next": "^16.0.7",
    "next-themes": "^0.4.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.8.1",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "electron": "^35.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.2.0",
    "typescript": "5.7.3"
  }
}
